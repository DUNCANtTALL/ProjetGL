@page
@model ProjetGL.Pages.Panne.AjouterPanneModel
@{
}
@{
    ViewData["Title"] = "Ajouter une Panne";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center text-danger mb-4">Ajouter une Nouvelle Panne</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea asp-for="NouvellePanne.Description" class="form-control rounded-3" placeholder="Décrivez le problème..." required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date de Signalement</label>
                            <input type="date" asp-for="NouvellePanne.DateSignalement" class="form-control rounded-3" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Type</label>
                            <select asp-for="NouvellePanne.Type" class="form-select rounded-3">
                                <option>Matériel</option>
                                <option>Logiciel</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Statut</label>
                            <select asp-for="NouvellePanne.Statut" class="form-select rounded-3">
                                <option>En attente</option>
                                <option>En cours</option>
                                <option>Résolu</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-3 fw-bold">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>