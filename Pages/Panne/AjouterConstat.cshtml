@page
@model ProjetGL.Pages.Panne.AjouterConstatModel

@{
    ViewData["Title"] = "Ajouter un Constat";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4">Ajouter un Constat</h3>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-success text-center fw-bold">@Model.Message</div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="PanneId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Explication :</label>
                            <textarea asp-for="NouveauConstat.Explication" class="form-control rounded-3" placeholder="Expliquez la panne..." required></textarea>
                            <span asp-validation-for="NouveauConstat.Explication" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date :</label>
                            <input type="date" asp-for="NouveauConstat.DateConstat" class="form-control rounded-3" required />
                            <span asp-validation-for="NouveauConstat.DateConstat" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fréquence :</label>
                            <select asp-for="NouveauConstat.Frequence" class="form-select rounded-3">
                                <option value="">-- Sélectionner --</option>
                                <option>Rare</option>
                                <option>Fréquent</option>
                                <option>Permanent</option>
                            </select>
                            <span asp-validation-for="NouveauConstat.Frequence" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ordre :</label>
                            <select asp-for="NouveauConstat.Ordre" class="form-select rounded-3">
                                <option value="">-- Sélectionner --</option>
                                <option>Matériel</option>
                                <option>Logiciel</option>
                            </select>
                            <span asp-validation-for="NouveauConstat.Ordre" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-3 fw-bold">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
