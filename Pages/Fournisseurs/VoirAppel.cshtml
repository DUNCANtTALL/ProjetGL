@page
@model ProjetGL.Pages.Fournisseurs.VoirAppelModel
@{
}
<h3>Liste des Appels d'Offres</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.appel.Titre</td>
            <td>@Model.appel.DateDebut.ToString("dd/MM/yyyy")</td>
            <td>@Model.appel.DateFin.ToString("dd/MM/yyyy")</td>
            <td>@Model.appel.Description</td>
        </tr>
    </tbody>
</table>

<h4>Ordinateurs Demandés</h4>
@if (Model.ordinateurs != null && Model.ordinateurs.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Marque</th>
                <th>CPU</th>
                <th>RAM</th>
                <th>Disque</th>
                <th>Quantité</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ordinateur in Model.ordinateurs)
            {
                <tr>
                    <td>@ordinateur.Marque</td>
                    <td>@ordinateur.Cpu</td>
                    <td>@ordinateur.Ram Go</td>
                    <td>@ordinateur.Disque</td>
                    <td>@ordinateur.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucun ordinateur demandé.</p>
}

<h4>Imprimantes Demandées</h4>
@if (Model.imprimantes != null && Model.imprimantes.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Marque</th>
                <th>Vitesse</th>
                <th>Résolution</th>
                <th>Quantité</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var imprimante in Model.imprimantes)
            {
                <tr>
                    <td>@imprimante.Marsque</td>
                    <td>@imprimante.Vitesse pages/min</td>
                    <td>@imprimante.Resoluton dpi</td>
                    <td>@imprimante.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucune imprimante demandée.</p>
}