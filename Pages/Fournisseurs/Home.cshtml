@page
@model ProjetGL.Pages.Fournisseur.HomeModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="bg-blue-600 text-white p-4 flex items-center justify-between fixed top-0 left-0 w-full z-50">
        <!-- Bouton Hamburger -->
        <button id="menu-toggle" class="text-2xl focus:outline-none">
            ☰
        </button>

        <!-- Logo -->
        <div class="flex items-center">
            <img src="https://via.placeholder.com/30" alt="Logo" class="h-8 w-8 mr-2">
            <h1 class="text-lg font-bold">RICOCHET<span class="text-sm">360</span></h1>
        </div>
    </header>

    <!-- Sidebar -->
    <div id="sidebar" class="fixed top-[4rem] left-0 h-[calc(100%-4rem)] w-64 bg-blue-700 text-white transform -translate-x-full transition-transform duration-300 z-40">
        <div class="p-4 text-xl font-bold border-b border-blue-600">
            Menu
        </div>
        <ul class="mt-4 space-y-4">
            <!-- Pass userId in the URL as a query parameter -->
            <li>
                <a href="/Fournisseurs/ListerAppelOffre?userId=@Model.UserId" class="block p-2 bg-yellow-500 text-black rounded hover:bg-yellow-600">
                    Gestion des Appels d'Offres
                </a>
            </li>

            <li>
                <a href="/Fournisseurs/Notifications?userId=@Model.UserId" class="block p-2 bg-yellow-500 text-black rounded hover:bg-yellow-600">
                    Notifications
                </a>
            </li>
        </ul>
    </div>

    <!-- Contenu principal -->
    <main class="pt-[4rem] ml-64 p-6">
        <div id="main-content">
            <h2 class="text-2xl font-bold mb-4">Bienvenue sur votre tableau de bord</h2>
            <p>Contenu principal ici...</p>
        </div>
    </main>

    <!-- Script -->
    <script>
        $(document).ready(function () {
            const sidebar = $('#sidebar');

            // Toggle Sidebar
            $('#menu-toggle').on('click', function () {
                sidebar.toggleClass('-translate-x-full');
            });
        });
    </script>

</body>
</html>
