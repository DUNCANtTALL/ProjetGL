@page
@model ProjetGL.Pages.ResponsableDesResources.MessagerieModel
@{
}
<h3 class="text-center mt-4">Chats</h3>
<div class="container">
    <div class="row">
        @foreach (var conversation in Model.Conversations)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <a asp-page="/ResponsableDesResources/Conversation"
                   asp-route-fournisseurId="@conversation.ChatUserId"
                   class="text-decoration-none">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <div class="avatar me-3">
                                @if (Model.UserMap.TryGetValue(conversation.ChatUserId, out var user))
                                {
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px;">
                                        @user.Name.Substring(0, 1).ToUpper()
                                    </div>
                                }
                            </div>

                            <div class="flex-grow-1">
                                <p class="card-text mb-0 text-muted">
                                    @conversation.LatestMessage.Content
                                </p>
                            </div>

                            <div>
                                <span class="badge bg-secondary">@conversation.LatestMessage.SentAt.ToShortTimeString()</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
