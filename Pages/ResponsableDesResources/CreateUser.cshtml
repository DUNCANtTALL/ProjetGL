@page
@model ProjetGL.Pages.ResponsableDesResources.CreateUserModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4">Create New User</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <input type="text" asp-for="user.Name" class="form-control rounded-3" placeholder="Enter username" />
                            <span asp-validation-for="user.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" asp-for="user.Email" class="form-control rounded-3" placeholder="Enter email" />
                            <span asp-validation-for="user.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Password</label>
                            <input type="password" asp-for="user.Password" class="form-control rounded-3" placeholder="Enter password" />
                            <span asp-validation-for="user.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">User Type</label>
                            <select asp-for="user.Type" class="form-select rounded-3">
                                <option value="">-- Select User Type --</option>
                                <option value="Chef de Projet">Chef</option>
                                <option value="Departement">Enseignant</option>
                                <option value="Technicien">Technicien</option>
                            </select>
                            <span asp-validation-for="user.Type" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-3 fw-bold">Create User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
