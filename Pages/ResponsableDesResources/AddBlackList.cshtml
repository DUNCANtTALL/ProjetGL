@page
@model ProjetGL.Pages.ResponsableDesResources.AddBlackListModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4">Blacklist User</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <input type="text" asp-for="user.Name" class="form-control rounded-3" placeholder="Enter username" />
                            <span asp-validation-for="user.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Raison</label>
                            <textarea asp-for="Raison" class="form-control rounded-3" rows="3" placeholder="Enter reason"></textarea>
                            <span asp-validation-for="Raison" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-3 fw-bold">Blacklist User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
