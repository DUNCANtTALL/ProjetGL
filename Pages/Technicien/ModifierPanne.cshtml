@page
@model ProjetGL.Pages.Technicien.ModifierPanneModel
@{
    ViewData["Title"] = "Modifier une Panne";
}

<h1>Modifier la Panne</h1>

<form method="post">
    <input type="hidden" asp-for="PanneModifiee.Id" />

    <div class="form-group">
        <label>Description</label>
        <input type="text" asp-for="PanneModifiee.Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Date Signalement</label>
        <input type="date" asp-for="PanneModifiee.DateSignalement" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Type</label>
        <select asp-for="PanneModifiee.Type" class="form-control">
            <option>Matériel</option>
            <option>Logiciel</option>
        </select>
    </div>
    <div class="form-group">
        <label>Statut</label>
        <select asp-for="PanneModifiee.Statut" class="form-control">
            <option>En attente</option>
            <option>En cours</option>
            <option>Résolu</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Modifier</button>
</form>